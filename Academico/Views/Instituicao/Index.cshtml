@model IEnumerable<Academico.Models.Instituicao>

@{
    ViewData["Title"] = "Index";
}

<h1>Instituição</h1>
<br />
<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.InstituicaoId" class="btn btn-secondary me-2">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.InstituicaoId" class="btn btn-secondary me-2">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.InstituicaoId" class="btn btn-secondary me-2">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
